        $('.lan_select_mn .lan_arrow').click(function() {
            var parent=$(this).parent();
			parent.siblings('ul').slideToggle();
            parent.siblings('.continent_cnt').children('ul').slideToggle();
		});
        
        $(".sel_lang").click(function() {
            $(".float_sel_lang").css("display", "block");
        });
        
        $(".lang_select .hd .close").click(function() {
            $(".float_sel_lang").css("display", "none");
        });
	}
	
	function menu() {
		if ($(window).width() < 991) {
